<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".TicketMenuFragment">

    <Button
        android:layout_width="match_parent"
        android:id="@+id/buy_ticket_button"
        android:text="Bilet SatÄ±n Al"
        android:background="@color/Orange"
        android:textSize="20dp"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/film_image_menu"
                android:layout_margin="10dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/film_name_tv_menu"
                android:textColorHint="@color/White"
                android:textColor="@color/White"
                android:textSize="20dp"
                android:padding="5dp"
                android:layout_margin="10dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/film_director_tv_menu"
                android:textColorHint="@color/White"
                android:textColor="@color/White"
                android:textSize="20dp"
                android:padding="5dp"
                android:layout_margin="10dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/film_writer_tv_menu"
                android:textColorHint="@color/White"
                android:textColor="@color/White"
                android:textSize="20dp"
                android:padding="5dp"
                android:layout_margin="10dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/film_release_date_tv_menu"
                android:textColorHint="@color/White"
                android:textColor="@color/White"
                android:textSize="20dp"
                android:padding="5dp"
                android:layout_margin="10dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/genre_tv_menu"
                android:textColorHint="@color/White"
                android:textColor="@color/White"
                android:textSize="20dp"
                android:padding="5dp"
                android:layout_margin="10dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/actors_tv_menu"
                android:textColorHint="@color/White"
                android:textColor="@color/White"
                android:textSize="20dp"
                android:padding="5dp"
                android:layout_margin="10dp"
                android:layout_height="wrap_content"/>


        </LinearLayout>

    </ScrollView>

</LinearLayout>