<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="match_parent"
    tools:context=".FirstLoginActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:textColor="@color/White"
            android:textSize="18dp"
            android:text="Müşteri Girişi"
            android:id="@+id/customer_login_button"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:background="@color/Gray"
            android:layout_height="wrap_content"></Button>

        <Button
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:background="@color/Gray"
            android:textColor="@color/White"
            android:textSize="18dp"
            android:text="Yönetici Girişi"
            android:id="@+id/admin_login_button"
            android:layout_height="wrap_content"></Button>


    </LinearLayout>



    <EditText
        android:layout_width="match_parent"
        android:background="@color/White"
        android:layout_margin="12dp"
        android:padding="5dp"
        android:textColorHint="@color/Gray"
        android:hint="Email"
        android:textColor="@color/Black"
        android:id="@+id/email_et"
        android:layout_height="wrap_content"/>

    <EditText
        android:layout_width="match_parent"
        android:background="@color/White"
        android:layout_margin="12dp"
        android:inputType="textPassword"
        android:padding="5dp"
        android:textColor="@color/Black"
        android:textColorHint="@color/Gray"
        android:hint="Parola"
        android:id="@+id/password_et"
        android:layout_height="wrap_content"/>


    <androidx.cardview.widget.CardView
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/login_cv"
        android:layout_gravity="right"
        app:cardBackgroundColor="@color/Orange"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">

        <TextView
            android:text="Giriş Yap"
            android:gravity="center"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:textColor="@color/White"
            android:textSize="20dp"
            android:textStyle="bold"></TextView>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/register_cv"
        app:cardBackgroundColor="@color/Orange"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">

        <TextView
            android:text="Hesabın yok mu? Hemen Kayıt Ol"
            android:gravity="center"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:textColor="@color/White"
            android:textSize="20dp"
            android:textStyle="bold"></TextView>

    </androidx.cardview.widget.CardView>




</LinearLayout>