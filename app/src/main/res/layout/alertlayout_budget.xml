<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/alert_info_tv"
        android:text="Alert Information"
        android:textStyle="bold"
        android:textColor="@color/White"
        android:textSize="18dp"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/budget_operation_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="İşlemi giriniz" />

    <EditText
        android:id="@+id/budget_amount_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Miktarı giriniz" />

    <Button
        android:id="@+id/alert_cancel_button"
        android:layout_width="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="4dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="İptal" />

    <Button
        android:layout_width="wrap_content"
        android:padding="5dp"
        android:layout_margin="4dp"
        android:layout_gravity="right"
        android:text="Ekle"
        android:id="@+id/alert_add_button"
        android:layout_height="wrap_content"/>


</LinearLayout>